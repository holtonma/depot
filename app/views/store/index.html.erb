<h1>Golfap Books Catalog</h1>

<% for product in @products -%>
	<div class="entry">
		<%= image_tag(product.image_url) %>
		<h3>Did Aaron quit his job: <%= did_you_quit_your_job?('Aaron') %></h3>
		<h3><%= h(product.title) %></h3>
		<%= product.description %>
		<div class="price-line">
			<span class="price"><%= pennies_to_dollars(product.price) %></span>
			<span>
				<%= button_to "Add to Cart", :action => 'create', :controller => 'items', :cart_id => @cart_id, 
				    :id => product.id  %>
				
				<%# button_to "Add to Cart", :controller => 'items', :action => 'new_cart_item', :id => product, :cart_id => 1  %> 
				<!--, :action => 'new', :controller => 'items', :id => product %> -->
			</span>
		</div>
	</div>
<% end %>
