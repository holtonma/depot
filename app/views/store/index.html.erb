<h1><%= I18n.t 'layout.main.title' %></h1>

<% for product in @products -%>
	<div class="entry">
		<%= image_tag(product.image_url) %>
		<h3><%= h(product.title) %></h3>
		<%= product.description %>
		<div class="price-line">
			<span class="price"><%= pennies_to_dollars(product.price) %></span>
			<span>
				<%= button_to I18n.t('layout.main.add'), :action => 'create', :controller => 'items', 
						:cart_id => @cart_id, :id => product.id  %>
			</span>
		</div>
	</div>
<% end %>
