
<h2>Your Golfap Books Cart</h2>

<div class="cart-title"></div>

<table class="cart">
	<tr>
		<th>Qty.</th>
		<th>Title</th>
		<th>Price (US$)</th>
	</tr>
	<%= render(:partial => "cart/cart_item", :collection => @cart.items) %>
	
	<% if (@cart.items.length != 0) %>	
	  <tr class="total-line">
			<td colspan="2">Total</td>
			<td class="total-cell"><%= pennies_to_dollars(@cart.total_price) %></td>
		</tr>
		<tr>
			<td colspan="3" align="left">
				<%= button_to 'Empty Cart', { :controller => 'cart', :action => 'destroy' }, 
											:confirm => "Are you sure you wish to remove your cart?", :method => :delete %>
											<!-- :id => params[:id] -->
			</td>
	<% else %>
		<tr>
			<td colspan="3">Your cart contains no items.  Continue shopping at <%= link_to 'store', store_index_path %>.</td>
		</tr>
	<% end %>
	
</table>

  

