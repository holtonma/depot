<div class="cart-title"><%= I18n.t 'layout.cart.title' %></div>
<table>
  <%= render(:partial => "cart/cart_item", :collection => cart.items) %>  
  
  <tr class="total-line">
    <td colspan="2">Total</td>
    <td class="total-cell"><%= pennies_to_dollars(cart.total_price) %></td>
  </tr>
</table>

<%= button_to I18n.t('layout.cart.button.checkout'), 
  					{ :controller => :cart, :action => 'destroy', :id => 1}, 
							:confirm => "Are you sure you wish to remove your cart?", :method => :delete %>
<%= button_to I18n.t('layout.cart.button.empty'), :action => 'checkout', :controller => 'store' %>
